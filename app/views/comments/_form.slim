= simple_form_for @form, url: blog_comments_path(@commentable), remote: true do |f|
  = hidden_field_tag :authenticity_token, form_authenticity_token
  = f.input_field :nickname, as: :hidden

  .grid-x
    .small-12.medium-4.large-2.cell
      p.text-center
        = retina_image_tag current_user, :avatar, :small
        br
        = current_user.username

    .auto.cell
      = f.input :body
      = button_tag :submit, class: 'button'
