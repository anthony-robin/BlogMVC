/ Page title
- content_for :page_title do
  div class="callout large primary"
    div class="row column text-center"
      h1 = @title

- unless @blogs.empty?
  table.hover
    thead
      tr
        th Titre
        th Actions
    tbody
      - @blogs.each do |blog|
        tr
          td = blog.title
          td
            =< link_to 'Voir', blog, class: 'button small success'
            =< link_to 'Modifier', [:edit, blog], class: 'button small warning'
            =< link_to 'Supprimer', blog, data: { confirm: 'Etes-vous sÃ»r ?' }, method: :delete, class: 'button small alert'

  = paginate @blogs
