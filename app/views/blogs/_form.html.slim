= simple_form_for @blog, validate: true do |f|
  .row
    .small-12.medium-4.columns
      = f.input :title

      - unless f.object.new_record?
        br
        = f.input :slug, disabled: true

      br
      = f.input :category_id,
                as: :select,
                collection: Category.all,
                include_blank: false

    .small-12.medium-8.columns
      = f.input :content,
                as: :text,
                input_html: { class: 'froala' }

  .row.form-actions
    .small-12.columns class="medium-#{f.object.new_record? ? 9 : 6 }"
      = f.button :submit, class: 'full-width'
    - unless f.object.new_record?
      .small-12.medium-3.columns
        a class="button warning full-width" data-open="blog_preview" Pr√©visualiser les modifications
    .small-12.medium-3.columns
      = link_to 'Annuler', blogs_path, class: 'button secondary full-width'

  - unless f.object.new_record?
    div class="reveal" id="blog_preview" data-reveal=''
      = render 'blog', blog: @blog

      button class="close-button" data-close='' aria-label="Fermer modal" type="button"
        span aria-hidden="true" &times;
