p#notice = notice

- content_for :page_title do
  div class="callout large primary"
    div class="row column text-center"
      h1 = @title

#sidebar_referer
  .row
    .small-12.medium-9.columns
      article.blog
        header
          h2
            = link_to @blog.title, category_blog_path(@blog.category, @blog)
            =< content_tag(:span, @blog.category_name, class: 'label')
            small =< I18n.l(@blog.created_at, format: :short)

        div.preview = image_tag 'https://placehold.it/650x250', class: 'thumbnail'
        div.fr-view == @blog.content

        footer
          =< link_to 'Modifier', edit_category_blog_path(@blog.category, @blog), class: 'button small warning'
          =< link_to 'Supprimer', @blog, data: { confirm: 'Etes-vous sÃ»r ?' }, method: :delete, class: 'button small alert'
          =< link_to 'Retour', blogs_path, class: 'button small'

    = render 'blogs/sidebar'
